                <GridView x:Name="gvSkills1" SelectionMode="None" Grid.Row="1" Margin="0,16,0,0">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <local:SkillControl DataContext="{Binding}">
                            </local:SkillControl>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>
